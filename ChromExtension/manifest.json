{
  "name": "Site Saver",
  "version": "1.0",
  "description": "Save all my to look at later sites",
  "permissions": [
    "bookmarks",
    "tabs",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Site Saver",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://localhost; object-src 'self'"
}
 